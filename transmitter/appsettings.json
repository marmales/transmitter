{
  "Imap": {
    "Hostname": "127.0.0.1",
    "Port": 1143
  },
  "Smtp": {
    "Hostname": "127.0.0.1",
    "Port": 1025,
    "FriendlyName": "2 Tea To Room 2"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning"
    },
    "EventLog": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "file": {
        "type": "File",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            { "name": "timestamp", "layout": "${date:format=o}" },
            { "name": "level", "layout": "${level}" },
            { "name": "logger", "layout": "${logger}" },
            { "name": "messageId", "layout": "${mdlc:item=messageId}" },
            { "name": "subject", "layout": "${mdlc:item=subject}" },
            { "name": "message", "layout": "${message:raw=true}" },
            { "name": "properties", "encode": false, "layout": { "type": "JsonLayout", "includeallproperties": "true" } }
          ]
        }
      }
    },
    "rules": [
      { "logger": "Microsoft*", "minLevel": "Information", "writeTo": "file", "final": true },
      { "logger": "*", "minLevel": "Debug", "writeTo": "file" }
    ]
  }
}
